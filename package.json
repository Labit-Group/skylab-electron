{
  "name": "skylab",
  "version": "0.1.2",
  "description": "Skylab by Francisco Ortega Iglesias",
  "main": "main.js",
  "author": "Francisco Ortega Iglesias",
  "bundleVersion": "1",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win:x64": "electron-builder --win --x64",
    "dist:win:ia32": "electron-builder --win --ia32",
    "dist:win:arm64": "electron-builder --win --arm64",
    "dist:mac": "electron-builder --mac",
    "dist:mac:arm64": "electron-builder --mac --arm64",
    "dist:mac:x64": "electron-builder --mac --x64",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.labit.skylab",
    "productName": "SkyLab",
    "copyright": "Labit",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "release-builds"
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "identity": null,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "icon": "assets/icons/png",
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico",
      "installerHeaderIcon": "assets/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SkyLab",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "menuCategory": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-store": "^8.1.0"
  }
}
