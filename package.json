{
  "name": "skylab",
  "version": "0.1.1",
  "description": "Skylab by Francisco Ortega Iglesias",
  "main": "main.js",
  "author": "Francisco Ortega Iglesias",
  "bundleVersion": "1",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "build:mac:x64": "electron-builder --mac --x64",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:mac:universal": "electron-builder --mac --universal",
    "rebuild:x64": "electron-rebuild --arch=x64",
    "rebuild:arm64": "electron-rebuild --arch=arm64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.labit.skylab",
    "productName": "SkyLab",
    "copyright": "Labit",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "release-builds"
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "icon": "assets/icons/png/icon.svg",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-store": "^8.1.0"
  }
}
